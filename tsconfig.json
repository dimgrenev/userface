{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "types": ["vitest/globals", "@testing-library/jest-dom", "react", "react-dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "build",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["engine", "index.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.test.tsx",
    "components/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
} 